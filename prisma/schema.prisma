generator client {
  provider = "prisma-client-js"
}

datasource db {
//POR PADR√ÉO E O POSTGRESQL
//VAMOS UTILZIAR O SQLITE
  provider = "sqlite"
  url      = "file:./dev.db"
}

//CRIAMOS AS MODELS
model Product{
 //PRIMARY KEY
   id String @id @default(cuid())
   name String
   description String
   image String
   price Int
   sku String
}
